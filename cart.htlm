<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panier - Melytis</title>
    <style>
        /* Styles similaires Ã  ceux de la page d'accueil */
        body {
            font-family: 'Helvetica Neue', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f1f1f1;
            color: #333;
            line-height: 1.6;
        }
        .navbar {
            background-color: #111;
            color: white;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .navbar a {
            color: white;
            text-decoration: none;
        }
        .navbar a:hover {
            text-decoration: underline;
        }
        .cart-container {
            padding: 50px 20px;
            text-align: center;
        }
        .cart-item {
            background-color: #fff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .footer {
            background-color: #111;
            color: white;
            padding: 20px;
            text-align: center;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <div class="navbar">
        <a href="index.html">Accueil</a>
        <a href="boutique.html">Boutique</a>
        <a href="cart.html">Panier</a>
        <a href="https://wa.me/33612317014">Contact</a>
    </div>

    <!-- Panier -->
    <div class="cart-container">
        <h1>Votre Panier</h1>
        <div id="cart-items"></div>
        <button onclick="clearCart()">Vider le Panier</button>
    </div>

    <!-- Footer -->
    <div class="footer">
        <p>WhatsApp : +33612317014 | <a href="#">Conditions GÃ©nÃ©rales</a> | Boutique FranÃ§aise ðŸ‡«ðŸ‡·</p>
    </div>

    <script>
        // Fonction pour afficher les articles du panier
        function displayCart() {
            let cart = JSON.parse(localStorage.getItem('cart')) || [];
            const cartItemsContainer = document.getElementById('cart-items');
            cartItemsContainer.innerHTML = '';

            if (cart.length === 0) {
                cartItemsContainer.innerHTML = '<p>Votre panier est vide.</p>';
            } else {
                cart.forEach((item) => {
                    const itemElement = document.createElement('div');
                    itemElement.classList.add('cart-item');
                    itemElement.innerHTML = `
                        <h3>${item.name}</h3>
                        <p>Prix : ${item.price}â‚¬</p>
                    `;
                    cartItemsContainer.appendChild(itemElement);
                });
            }
        }

        // Fonction pour vider le panier
        function clearCart() {
            localStorage.removeItem('cart');
            displayCart();
        }

        // Afficher les articles du panier au chargement de la page
        window.onload = displayCart;
    </script>

</body>
</html>
